        <DataTemplate x:Key="IconCloseAllTabs">
            <Viewbox Width="16" Height="16">
                <Canvas Width="24" Height="24">
                    <Path Fill="{DynamicResource IconBrush}" Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" />
