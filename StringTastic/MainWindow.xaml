<Window x:Class="StringTastic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:StringTastic.Views"
        Title="StringTastic" Height="762.344" Width="1047.656" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="RichTextWithBetterSpacing" TargetType="{x:Type RichTextBox}">
            <Style.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </Style.Resources>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <!-- Performance improvements -->
            <Setter Property="SpellCheck.IsEnabled" Value="False"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="New">
                    <MenuItem Header="New Compare" Click="NewCompareMenu_Click" />
                    <MenuItem Header="New Manipulation" Click="NewManipulationMenu_Click" />
                </MenuItem>
                <Separator />
                <MenuItem Header="Close Tab" Click="CloseCurrentTabMenu_Click" />
                <MenuItem Header="Close All Tabs" Click="CloseAllTabsMenu_Click" />
                <Separator />
                <MenuItem Header="Exit" Click="ExitMenu_Click" />
            </MenuItem>
        </Menu>

        <TabControl x:Name="MainTabControl" />
    </DockPanel>

</Window>
