<Window x:Class="StringTastic.MainWindow"
        x:Name="RootWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:StringTastic.Views"
        Title="StringTastic" Height="762.344" Width="1047.656" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="RichTextWithBetterSpacing" TargetType="{x:Type RichTextBox}">
            <Style.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </Style.Resources>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <!-- Performance improvements -->
            <Setter Property="SpellCheck.IsEnabled" Value="False"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        </Style>

        <!-- Small, flat tab close button style (vector X for reliable rendering) -->
        <Style x:Key="TabCloseButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="16" />
            <Setter Property="Height" Value="16" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="4,0,0,0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="ToolTip" Value="Close tab" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="2">
                            <Viewbox Width="12" Height="12" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Canvas Width="12" Height="12">
                                    <Path x:Name="p1" Data="M2,2 L10,10" Stroke="Gray" StrokeThickness="1.6" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                    <Path x:Name="p2" Data="M10,2 L2,10" Stroke="Gray" StrokeThickness="1.6" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                </Canvas>
                            </Viewbox>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FFE6E6E6" />
                                <Setter TargetName="p1" Property="Stroke" Value="Black" />
                                <Setter TargetName="p2" Property="Stroke" Value="Black" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FFD9D9D9" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="p1" Property="Stroke" Value="#FFBFBFBF" />
                                <Setter TargetName="p2" Property="Stroke" Value="#FFBFBFBF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Raised-looking toolbar button style: visible border, corner radius and hover/pressed colors -->
        <Style x:Key="ToolbarRaisedButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="6,2" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FFF2F2F2" />
                                <Setter TargetName="bd" Property="BorderBrush" Value="#FF9A9A9A" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FFE6E6E6" />
                                <Setter TargetName="bd" Property="BorderBrush" Value="#FF7A7A7A" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Background" Value="#FFF7F7F7" />
                                <Setter TargetName="bd" Property="BorderBrush" Value="#FFCCCCCC" />
                                <Setter Property="Foreground" Value="#FFAAAAAA" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Apply the raised style to all toolbar buttons by overriding the ToolBar button style key -->
        <Style TargetType="Button" x:Key="{x:Static ToolBar.ButtonStyleKey}" BasedOn="{StaticResource ToolbarRaisedButton}" />

    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="New">
                    <MenuItem Header="New Compare" Command="{Binding NewCompareCommand}">
                        <MenuItem.Icon>
                            <ContentControl ContentTemplate="{StaticResource IconNewCompare}" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="New Manipulation" Command="{Binding NewManipulationCommand}">
                        <MenuItem.Icon>
                            <ContentControl ContentTemplate="{StaticResource IconNewManipulation}" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <Separator />
                <MenuItem Header="Close Tab" Command="{Binding CloseCurrentTabCommand}" />
                <MenuItem Header="Close All Tabs" Command="{Binding CloseAllTabsCommand}" />
                <Separator />
                <MenuItem Header="Exit" Command="{Binding ExitCommand}" />
            </MenuItem>
        </Menu>

        <!-- Toolbar with quick-create buttons -->
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Command="{Binding NewCompareCommand}" Margin="2" Padding="6,2">
                    <StackPanel Orientation="Horizontal">
                        <ContentControl ContentTemplate="{StaticResource IconNewCompare}" Margin="0,0,4,0" />
                        <TextBlock Text="New Compare" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Command="{Binding NewManipulationCommand}" Margin="2" Padding="6,2">
                    <StackPanel Orientation="Horizontal">
                        <ContentControl ContentTemplate="{StaticResource IconNewManipulation}" Margin="0,0,4,0" />
                        <TextBlock Text="New Manipulation" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </ToolBar>
        </ToolBarTray>

        <TabControl x:Name="MainTabControl" />
    </DockPanel>

</Window>
