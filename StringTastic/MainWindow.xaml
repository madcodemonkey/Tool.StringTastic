<Window x:Class="StringTastic.MainWindow"
        x:Name="RootWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:StringTastic.Views"
        Title="StringTastic" Height="762.344" Width="1047.656" WindowStartupLocation="CenterScreen"
        Icon="{StaticResource AppIcon}">
    <Window.Resources>
        <Style x:Key="RichTextWithBetterSpacing" TargetType="{x:Type RichTextBox}">
            <Style.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </Style.Resources>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <!-- Performance improvements -->
            <Setter Property="SpellCheck.IsEnabled" Value="False"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        </Style>

        <!-- Small, flat tab close button style (vector X for reliable rendering) -->
        <Style x:Key="TabCloseButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="16" />
            <Setter Property="Height" Value="16" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="4,0,0,0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="ToolTip" Value="Close tab" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="2">
                            <Viewbox Width="12" Height="12" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Canvas Width="12" Height="12">
                                    <Path x:Name="p1" Data="M2,2 L10,10" Stroke="Gray" StrokeThickness="1.6" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                    <Path x:Name="p2" Data="M10,2 L2,10" Stroke="Gray" StrokeThickness="1.6" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                </Canvas>
                            </Viewbox>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FFE6E6E6" />
                                <Setter TargetName="p1" Property="Stroke" Value="Black" />
                                <Setter TargetName="p2" Property="Stroke" Value="Black" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FFD9D9D9" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="p1" Property="Stroke" Value="#FFBFBFBF" />
                                <Setter TargetName="p2" Property="Stroke" Value="#FFBFBFBF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Raised-looking toolbar button style: visible border, corner radius and hover/pressed colors -->
        <Style x:Key="ToolbarRaisedButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="6,2" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FFF2F2F2" />
                                <Setter TargetName="bd" Property="BorderBrush" Value="#FF9A9A9A" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FFE6E6E6" />
                                <Setter TargetName="bd" Property="BorderBrush" Value="#FF7A7A7A" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Background" Value="#FFF7F7F7" />
                                <Setter TargetName="bd" Property="BorderBrush" Value="#FFCCCCCC" />
                                <Setter Property="Foreground" Value="#FFAAAAAA" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Apply the raised style to all toolbar buttons by overriding the ToolBar button style key -->
        <Style TargetType="Button" x:Key="{x:Static ToolBar.ButtonStyleKey}" BasedOn="{StaticResource ToolbarRaisedButton}" />

    </Window.Resources>

    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="E_xit" Click="Exit_Click">
                    <MenuItem.Icon>
                        <ContentControl ContentTemplate="{StaticResource IconExit}" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Theme">
                    <MenuItem Header="_Light" Click="ThemeLight_Click" IsCheckable="True" x:Name="MenuItemLightTheme" IsChecked="True" />
                    <MenuItem Header="_Dark" Click="ThemeDark_Click" IsCheckable="True" x:Name="MenuItemDarkTheme" />
                </MenuItem>
            </MenuItem>
        </Menu>
        
        <!-- Main content area with left and right containers -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="150" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Container with search box and tool list -->
            <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="0,0,1,0" Padding="10">
                <DockPanel>
                    <!-- Search Box -->
                    <TextBox x:Name="SearchTextBox" 
                             DockPanel.Dock="Top" 
                             Padding="5" 
                             Margin="0,0,0,10"
                             TextChanged="SearchTextBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Foreground" Value="Black" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="Search tools..." 
                                                                   Foreground="Gray" 
                                                                   Margin="5,0,0,0" />
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Tools List -->
                    <ListBox x:Name="ToolsListBox" 
                             BorderThickness="0"
                             SelectionChanged="ToolsListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <ContentControl ContentTemplate="{Binding IconTemplate}" 
                                                    Width="16" 
                                                    Height="16" 
                                                    Margin="0,0,8,0" />
                                    <TextBlock Text="{Binding DisplayName}" 
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                          Width="5" 
                          HorizontalAlignment="Stretch" 
                          VerticalAlignment="Stretch" 
                          Background="LightGray"
                          ShowsPreview="False" />

            <!-- Right Container with TabControl -->
            <TabControl x:Name="MainTabControl" Grid.Column="2" />
        </Grid>
    </DockPanel>

</Window>
