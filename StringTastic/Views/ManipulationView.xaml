<UserControl x:Class="StringTastic.Views.ManipulationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:StringTastic.Views"
             Height="Auto" Width="Auto">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" />
            <Setter Property="Padding" Value="6,2" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True" Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FFF0F0F0" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FFE0E0E0" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" >
            <Button Name="ClearManipulateButton" MinHeight="25" Margin="5" MinWidth="40" 
                    Command="{Binding RichTextBoxCommon.ClearRichTextBoxCommand}" CommandParameter="{Binding ElementName=RtbManipulate}">
                <StackPanel Orientation="Horizontal">
                    <ContentControl ContentTemplate="{StaticResource IconClear}" Margin="0,0,4,0" />
                    <TextBlock Text="Clear" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
            <Button Name="UndoButton" MinHeight="25" Margin="5" MinWidth="40" 
                    Command="ApplicationCommands.Undo" CommandTarget="{Binding ElementName=RtbManipulate}" ToolTip="Undo last action">
                <StackPanel Orientation="Horizontal">
                    <ContentControl ContentTemplate="{StaticResource IconUndo}" Margin="0,0,4,0" />
                    <TextBlock Text="Undo" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
            <ComboBox Name="ActionComboBox" MinHeight="25" Margin="5" MinWidth="150" VerticalContentAlignment="Center" SelectedIndex="4">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <ContentControl ContentTemplate="{Binding IconTemplate}" Margin="0,0,6,0" />
                            <TextBlock Text="{Binding DisplayText}" VerticalAlignment="Center" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
                <ComboBox.Items>
                    <local:ActionItem DisplayText="Base64 Encode" Tag="Base64Encode" IconKey="IconEncodeDecode" />
                    <local:ActionItem DisplayText="Base64 Decode" Tag="Base64Decode" IconKey="IconEncodeDecode" />
                    <local:ActionItem DisplayText="URL Encode" Tag="UrlEncode" IconKey="IconEncodeDecode" />
                    <local:ActionItem DisplayText="URL Decode" Tag="UrlDecode" IconKey="IconEncodeDecode" />
                    <local:ActionItem DisplayText="JWT Decode" Tag="JwtDecode" IconKey="IconEncodeDecode" />
                    <local:ActionItem DisplayText="Generate GUIDs" Tag="GenerateGuids" IconKey="IconGuid" />
                    <local:ActionItem DisplayText="Sort Ascending" Tag="SortAscending" IconKey="IconSort" />
                    <local:ActionItem DisplayText="Sort Descending" Tag="SortDescending" IconKey="IconSort" />
                    <local:ActionItem DisplayText="Trim" Tag="Trim" IconKey="IconTrim" />
                    <local:ActionItem DisplayText="Unique" Tag="Unique" IconKey="IconUnique" />
                </ComboBox.Items>
            </ComboBox>
            <Button Name="ExecuteButton" MinHeight="25" Margin="5" MinWidth="40" Click="ExecuteButton_Click" ToolTip="Execute selected action">
                <StackPanel Orientation="Horizontal">
                    <ContentControl ContentTemplate="{StaticResource IconExecute}" Margin="0,0,4,0" />
                    <TextBlock Text="Execute" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
        </StackPanel>
        <RichTextBox Name="RtbManipulate" Grid.Row="1" Style="{DynamicResource RichTextWithBetterSpacing}" 
                      HorizontalAlignment="Stretch" Margin="0, 5, 5, 0"  VerticalAlignment="Stretch" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Auto">
            <RichTextBox.ContextMenu>
                <ContextMenu >
                    <MenuItem Command="ApplicationCommands.SelectAll" />
                    <MenuItem Command="ApplicationCommands.Copy" />
                    <MenuItem Command="ApplicationCommands.Cut" />
                    <MenuItem Command="ApplicationCommands.Paste" />
                    <Separator />
                    <MenuItem Header="_Load">
                        <MenuItem Header="_Contents of a file" 
                                      Command="{Binding RichTextBoxCommon.LoadFileContentsCommand}"
                                      CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}},Path=PlacementTarget}" />
                        <MenuItem Header="File _names from a directory"
                                      Command="{Binding RichTextBoxCommon.LoadFileNamesCommand}"
                                      CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}},Path=PlacementTarget}" />
                        <MenuItem Header="Folder _names from a directory"
                                      Command="{Binding RichTextBoxCommon.LoadFolderNamesCommand}"
                                      CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}},Path=PlacementTarget}" />
                    </MenuItem>
                </ContextMenu>
            </RichTextBox.ContextMenu>
        </RichTextBox>
    </Grid>
</UserControl>