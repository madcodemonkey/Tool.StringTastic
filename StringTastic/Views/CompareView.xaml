<UserControl x:Class="StringTastic.Views.CompareView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:StringTastic.Views"
             Height="Auto" Width="Auto"
             Background="{DynamicResource ControlBackgroundBrush}">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}" />
            <Setter Property="Padding" Value="6,2" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True" Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource ButtonHoverBackgroundBrush}" />
                                <Setter TargetName="bd" Property="BorderBrush" Value="{DynamicResource ButtonHoverBorderBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource ButtonPressedBackgroundBrush}" />
                                <Setter TargetName="bd" Property="BorderBrush" Value="{DynamicResource ButtonPressedBorderBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource ButtonDisabledBackgroundBrush}" />
                                <Setter TargetName="bd" Property="BorderBrush" Value="{DynamicResource ButtonDisabledBorderBrush}" />
                                <Setter Property="Foreground" Value="{DynamicResource ButtonDisabledForegroundBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" >
                <Button Name="ClearLeftButton" MinHeight="25" Margin="5" MinWidth="40" 
                        Command="{Binding RichTextBoxCommon.ClearRichTextBoxCommand}" CommandParameter="{Binding ElementName=RtbLeftItems}">
                    <StackPanel Orientation="Horizontal">
                        <ContentControl ContentTemplate="{StaticResource IconClear}" Margin="0,0,4,0" />
                        <TextBlock Text="Clear" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Name="SortLeftButton" MinHeight="25" Margin="5" MinWidth="40" Click="SortLeftButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <ContentControl ContentTemplate="{StaticResource IconSort}" Margin="0,0,4,0" />
                        <TextBlock Text="Sort" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Name="MakeLeftItemsUniqueButton" MinHeight="25" Margin="5" MinWidth="40" Click="MakeLeftItemsUniqueButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <ContentControl ContentTemplate="{StaticResource IconUnique}" Margin="0,0,4,0" />
                        <TextBlock Text="Unique" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Name="TrimLeftItemsButton" MinHeight="25" Margin="5" MinWidth="40" Click="TrimLeftItemsButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <ContentControl ContentTemplate="{StaticResource IconTrim}" Margin="0,0,4,0" />
                        <TextBlock Text="Trim" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </StackPanel>
            <RichTextBox Name="RtbLeftItems" Grid.Row="1" Style="{DynamicResource RichTextWithBetterSpacing}" 
                         HorizontalAlignment="Stretch" Margin="0, 5, 5, 0"  VerticalAlignment="Stretch" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Auto">
                <RichTextBox.ContextMenu>
                    <ContextMenu >
                        <MenuItem Command="ApplicationCommands.SelectAll" />
                        <MenuItem Command="ApplicationCommands.Copy" />
                        <MenuItem Command="ApplicationCommands.Cut" />
                        <MenuItem Command="ApplicationCommands.Paste" />
                        <Separator />
                        <MenuItem Header="_Load">
                            <MenuItem Header="_Contents of a file" 
                                      Command="{Binding RichTextBoxCommon.LoadFileContentsCommand}"
                                      CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}},Path=PlacementTarget}" />
                            <MenuItem Header="File _names from a directory"
                                      Command="{Binding RichTextBoxCommon.LoadFileNamesCommand}"
                                      CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}},Path=PlacementTarget}" />
                            <MenuItem Header="Folder _names from a directory"
                                      Command="{Binding RichTextBoxCommon.LoadFolderNamesCommand}"
                                      CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}},Path=PlacementTarget}" />
                        </MenuItem>
                    </ContextMenu>
                </RichTextBox.ContextMenu>
            </RichTextBox>
        </Grid>

        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="PutUniqueLeftItemsInRightRtbButton" MinHeight="25" Margin="5" MinWidth="40" Click="PutUniqueLeftItemsInRightRtbButton_Click">
                <StackPanel Orientation="Horizontal">
                    <ContentControl ContentTemplate="{StaticResource IconArrowRight}" Margin="0,0,4,0" />
                    <TextBlock Text="Unique" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
            <Button Name="PutUniqueRightItemsInLeftRtbButton" MinHeight="25" Margin="5" MinWidth="40" Click="PutUniqueRightItemsInLeftRtbButton_Click">
                <StackPanel Orientation="Horizontal">
                    <ContentControl ContentTemplate="{StaticResource IconArrowLeft}" Margin="0,0,4,0" />
                    <TextBlock Text="Unique" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
            <Button Name="ShowDifferencesButton" MinHeight="25" Margin="5" MinWidth="40" Click="ShowDifferencesButton_Click">
                <StackPanel Orientation="Horizontal">
                    <ContentControl ContentTemplate="{StaticResource IconCompare}" Margin="0,0,4,0" />
                    <TextBlock Text="Differences" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
            <Button Name="ShowSimilaritiesButton" MinHeight="25" Margin="5" MinWidth="40" Click="ShowSimilaritiesButton_Click">
                <StackPanel Orientation="Horizontal">
                    <ContentControl ContentTemplate="{StaticResource IconCompare}" Margin="0,0,4,0" />
                    <TextBlock Text="Similarities" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
        </StackPanel>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" >
                <Button Name="ClearRightButton" MinHeight="25" Margin="5" MinWidth="40"
                        Command="{Binding RichTextBoxCommon.ClearRichTextBoxCommand}" CommandParameter="{Binding ElementName=RtbRightItems}">
                    <StackPanel Orientation="Horizontal">
                        <ContentControl ContentTemplate="{StaticResource IconClear}" Margin="0,0,4,0" />
                        <TextBlock Text="Clear" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Name="SortRightButton" MinHeight="25" Margin="5" MinWidth="40" Click="SortRightButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <ContentControl ContentTemplate="{StaticResource IconSort}" Margin="0,0,4,0" />
                        <TextBlock Text="Sort" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Name="MakeRightItemsUniqueButton" MinHeight="25" Margin="5" MinWidth="40" Click="MakeRightItemsUniqueButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <ContentControl ContentTemplate="{StaticResource IconUnique}" Margin="0,0,4,0" />
                        <TextBlock Text="Unique" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Name="TrimRightItemsButton" MinHeight="25" Margin="5" MinWidth="40" Click="TrimRightItemsButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <ContentControl ContentTemplate="{StaticResource IconTrim}" Margin="0,0,4,0" />
                        <TextBlock Text="Trim" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </StackPanel>
            <RichTextBox Name="RtbRightItems" Grid.Row="1" Style="{DynamicResource RichTextWithBetterSpacing}" 
                         HorizontalAlignment="Stretch" Margin="0, 5, 5, 0"  VerticalAlignment="Stretch">
                <RichTextBox.ContextMenu>
                    <ContextMenu >
                        <MenuItem Command="ApplicationCommands.SelectAll" />
                        <MenuItem Command="ApplicationCommands.Copy" />
                        <MenuItem Command="ApplicationCommands.Cut" />
                        <MenuItem Command="ApplicationCommands.Paste" />
                        <Separator />
                        <MenuItem Header="_Load">
                            <MenuItem Header="_Contents of a file" 
                                      Command="{Binding RichTextBoxCommon.LoadFileContentsCommand}"
                                      CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}},Path=PlacementTarget}" />
                            <MenuItem Header="File _names from a directory"
                                      Command="{Binding RichTextBoxCommon.LoadFileNamesCommand}"
                                      CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}},Path=PlacementTarget}" />
                            <MenuItem Header="Folder _names from a directory"
                                      Command="{Binding RichTextBoxCommon.LoadFolderNamesCommand}"
                                      CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}},Path=PlacementTarget}" />
                        </MenuItem>
                    </ContextMenu>
                </RichTextBox.ContextMenu>
            </RichTextBox>
        </Grid>
    </Grid>
</UserControl>