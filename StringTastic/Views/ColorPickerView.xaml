<UserControl x:Class="StringTastic.Views.ColorPickerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top section with label and button -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Color Picker:" 
                       FontSize="14" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"
                       Foreground="{DynamicResource ControlForegroundBrush}" />
            
            <Button x:Name="ColorButton"
                    Grid.Column="1"
                    Content="#1ea54c"
                    MinHeight="30"
                    Padding="10,5"
                    FontWeight="Bold"
                    Foreground="White"
                    HorizontalAlignment="Stretch"
                    Click="ColorButton_Click">
                <Button.Background>
                    <SolidColorBrush Color="#1ea54c" />
                </Button.Background>
            </Button>
        </Grid>

        <!-- Second row with label and text box with embedded buttons -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Hex Color:" 
                       FontSize="12" 
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"
                       Foreground="{DynamicResource ControlForegroundBrush}" />

            <!-- Border container for text box with buttons inside -->
            <Border Grid.Column="1"
                    BorderBrush="{DynamicResource TextBoxBorderBrush}"
                    BorderThickness="1"
                    Background="{DynamicResource TextBoxBackgroundBrush}"
                    CornerRadius="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="HexColorTextBox"
                             Grid.Column="0"
                             Text="#1ea54c"
                             VerticalAlignment="Stretch"
                             Padding="5"
                             BorderThickness="0"
                             Background="Transparent"
                             Foreground="{DynamicResource TextBoxForegroundBrush}"
                             VerticalContentAlignment="Center" />

                    <Button x:Name="ClearButton"
                            Grid.Column="1"
                            Content="X"
                            Width="25"
                            Height="25"
                            Margin="2"
                            FontSize="12"
                            FontWeight="Bold"
                            ToolTip="Clear"
                            Click="ClearButton_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            VerticalAlignment="Center">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Foreground" Value="{DynamicResource ControlForegroundBrush}" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderThickness="0"
                                                    CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource ButtonHoverBackgroundBrush}" />
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource ButtonPressedBackgroundBrush}" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="CopyButton"
                            Grid.Column="2"
                            Width="25"
                            Height="25"
                            Margin="2"
                            ToolTip="Copy to clipboard"
                            Click="CopyButton_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            VerticalAlignment="Center">
                        <Button.Content>
                            <ContentControl ContentTemplate="{StaticResource IconCopy}" />
                        </Button.Content>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderThickness="0"
                                                    CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource ButtonHoverBackgroundBrush}" />
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource ButtonPressedBackgroundBrush}" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <Button x:Name="ApplyButton"
                    Grid.Column="2"
                    Content="Apply"
                    MinWidth="60"
                    Height="30"
                    Margin="10,0,0,0"
                    ToolTip="Apply hex color to color picker"
                    Click="ApplyButton_Click"
                    Background="{DynamicResource ButtonBackgroundBrush}"
                    Foreground="{DynamicResource ButtonForegroundBrush}"
                    BorderBrush="{DynamicResource ButtonBorderBrush}"
                    BorderThickness="1"
                    Cursor="Hand"
                    VerticalAlignment="Center" />
        </Grid>
    </Grid>
</UserControl>
