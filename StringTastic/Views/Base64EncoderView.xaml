<UserControl x:Class="StringTastic.Views.Base64EncoderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}" />
            <Setter Property="Padding" Value="6,2" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True" Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource ButtonHoverBackgroundBrush}" />
                                <Setter TargetName="bd" Property="BorderBrush" Value="{DynamicResource ButtonHoverBorderBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource ButtonPressedBackgroundBrush}" />
                                <Setter TargetName="bd" Property="BorderBrush" Value="{DynamicResource ButtonPressedBorderBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource ButtonDisabledBackgroundBrush}" />
                                <Setter TargetName="bd" Property="BorderBrush" Value="{DynamicResource ButtonDisabledBorderBrush}" />
                                <Setter Property="Foreground" Value="{DynamicResource ButtonDisabledForegroundBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" >
            <Button Name="ClearInputButton" MinHeight="25" Margin="5" MinWidth="40" 
                    Command="{Binding RichTextBoxCommon.ClearRichTextBoxCommand}" CommandParameter="{Binding ElementName=RtbInput}">
                <StackPanel Orientation="Horizontal">
                    <ContentControl ContentTemplate="{StaticResource IconClear}" Margin="0,0,4,0" />
                    <TextBlock Text="Clear Input" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
            <Button Name="UndoButton" MinHeight="25" Margin="5" MinWidth="40" 
                    Command="ApplicationCommands.Undo" CommandTarget="{Binding ElementName=RtbInput}" ToolTip="Undo last action">
                <StackPanel Orientation="Horizontal">
                    <ContentControl ContentTemplate="{StaticResource IconUndo}" Margin="0,0,4,0" />
                    <TextBlock Text="Undo" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
            <Button Name="TrimButton" MinHeight="25" Margin="5" MinWidth="40" Click="TrimButton_Click" ToolTip="Trim whitespace from each line">
                <StackPanel Orientation="Horizontal">
                    <ContentControl ContentTemplate="{StaticResource IconTrim}" Margin="0,0,4,0" />
                    <TextBlock Text="Trim" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Input RichTextBox -->
        <RichTextBox Name="RtbInput" Grid.Row="1" Style="{DynamicResource RichTextWithBetterSpacing}" 
                      HorizontalAlignment="Stretch" Margin="5"  VerticalAlignment="Stretch" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Auto">
            <RichTextBox.ContextMenu>
                <ContextMenu >
                    <MenuItem Command="ApplicationCommands.SelectAll" />
                    <MenuItem Command="ApplicationCommands.Copy" />
                    <MenuItem Command="ApplicationCommands.Cut" />
                    <MenuItem Command="ApplicationCommands.Paste" />
                    <Separator />
                    <MenuItem Header="_Load">
                        <MenuItem Header="_Contents of a file" 
                                      Command="{Binding RichTextBoxCommon.LoadFileContentsCommand}"
                                      CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}},Path=PlacementTarget}" />
                        <MenuItem Header="File _names from a directory"
                                      Command="{Binding RichTextBoxCommon.LoadFileNamesCommand}"
                                      CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}},Path=PlacementTarget}" />
                        <MenuItem Header="Folder _names from a directory"
                                      Command="{Binding RichTextBoxCommon.LoadFolderNamesCommand}"
                                      CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}},Path=PlacementTarget}" />
                    </MenuItem>
                </ContextMenu>
            </RichTextBox.ContextMenu>
        </RichTextBox>

        <!-- Middle Toolbar with Encode/Decode Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button Name="EncodeButton" MinHeight="25" Margin="5" MinWidth="80" Click="EncodeButton_Click" ToolTip="Base64 Encode the text">
                <StackPanel Orientation="Horizontal">
                    <ContentControl ContentTemplate="{StaticResource IconEncodeDecode}" Margin="0,0,4,0" />
                    <TextBlock Text="Encode" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
            <Button Name="DecodeButton" MinHeight="25" Margin="5" MinWidth="80" Click="DecodeButton_Click" ToolTip="Base64 Decode the text">
                <StackPanel Orientation="Horizontal">
                    <ContentControl ContentTemplate="{StaticResource IconEncodeDecode}" Margin="0,0,4,0" />
                    <TextBlock Text="Decode" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
            <Button Name="ClearOutputButton" MinHeight="25" Margin="5" MinWidth="40" 
                    Command="{Binding RichTextBoxCommon.ClearRichTextBoxCommand}" CommandParameter="{Binding ElementName=RtbOutput}">
                <StackPanel Orientation="Horizontal">
                    <ContentControl ContentTemplate="{StaticResource IconClear}" Margin="0,0,4,0" />
                    <TextBlock Text="Clear Output" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Output RichTextBox -->
        <RichTextBox Name="RtbOutput" Grid.Row="3" Style="{DynamicResource RichTextWithBetterSpacing}" 
                      HorizontalAlignment="Stretch" Margin="5"  VerticalAlignment="Stretch" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Auto" IsReadOnly="True">
            <RichTextBox.ContextMenu>
                <ContextMenu >
                    <MenuItem Command="ApplicationCommands.SelectAll" />
                    <MenuItem Command="ApplicationCommands.Copy" />
                </ContextMenu>
            </RichTextBox.ContextMenu>
        </RichTextBox>
    </Grid>
</UserControl>
